<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark text-white p-4 rounded-0">

          <h1>Update a Task</h1>
          <form action="/edit/{{task._id}}" method="POST">

          <div class="mb-3">
            <input 
            type="text" 
            name="title" 
            placeholder="Title" 
            value="{{task.title}}"
            class="form-control rounded-0 bg-dark text-white" />
          </div>

          <div class="mb-3">
            <textarea 
            name="description" 
            rows="4" 
            placeholder="Description"
            class="form-control rounded-0 bg-dark text-white"
            >{{task.description}}</textarea>
          </div>

          <button class="btn btn-primary">Update</button>

        </form>
        </div>
    </div>
  </div>
</div>